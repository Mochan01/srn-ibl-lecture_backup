{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/components/**/*.tsx", "./@types"],
  "exclude": ["src/components/**/*.stories.tsx", "./lib/**"]
}
